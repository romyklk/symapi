{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Département{% endblock %}

{% block body %}


<div class="container">

        <h1 class="text-center my-5">
            Liste des communes du département
        </h1>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <form action="" method="get" class="my-3">
    <div class="row mt-4">
        <div class="col-md-10">
        <div class="form-group">
            <select class="form-control" name="departement">
                <option value="toutes">Toutes les departement</option>
                {% for departement in departements %}
                    <option value="{{departement.code}}" 
                        {% if app.request.query.get('departement') == departement.code %}
                            selected
                        {% endif %}>
                    {{departement.nom}}
                    </option>
                {% endfor %}
            </select>
        </div>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
    </div>
    
        </form>
    </div>

    <div class="row">
        <div class="col-md-12">

              <div class="row ">
               {% for commune in communes %}
                <div class="card border-primary mb-3 mx-3 bg-primary text-white text-center" style="max-width: 20rem;">
                <div class="card-header">{{commune.code}}</div>
                <div class="card-body">
                    <h4 class="card-title">{{commune.nom}}</h4>
                    {% if app.request.query.get('departement') == commune.codeDepartement %}
                    <p class="card-text">Population : {{commune.population}} habitants</p>
                    {% endif %}
                    <p class="card-text">
                        {% for codesPostaux in commune.codesPostaux %}
                        Code Postal :    {{codesPostaux}} <br>
                        {% endfor %}
                    </p>
                </div>
                </div>
               {% endfor %}
                           {# Affichage de la pagination #}
            <div class="container mt-3 mb-5">
                <div class="row">
                    <div class="col-5 mx-auto">
                       {{ knp_pagination_render(communes, 'bootstrap_pagination.html.twig') }}
                    </div>
                </div>
            </div>
        </div>

        </div>
    </div>


</div>


{% endblock %}
